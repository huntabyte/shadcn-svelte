	"devDependencies": [
		"layerchart@2.0.0-next.10",
		"@lucide/svelte@^0.482.0",
		"d3-shape@^3.2.0",
		"@types/d3-shape@^3.1.7",
		"d3-scale@^4.0.2",
		"@types/d3-scale@^4.0.8"
	],
	"registryDependencies": [
		"chart",
		"card"
