{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"style": {
			"type": "string",
			"enum": [
				"default",
				"new-york"
			]
		},
		"tailwind": {
			"type": "object",
			"properties": {
				"config": {
					"type": "string"
				},
				"css": {
					"type": "string"
				},
				"baseColor": {
					"type": "string"
				}
			},
			"required": [
				"config",
				"css",
				"baseColor"
			]
		},
		"aliases": {
			"type": "object",
			"properties": {
				"utils": {
					"type": "string"
				},
				"components": {
					"type": "string"
				}
			},
			"required": [
				"utils",
				"components"
			]
		}
	},
	"required": [
		"style",
		"tailwind",
		"aliases"
	]
}
