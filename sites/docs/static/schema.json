{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"tailwind": {
			"type": "object",
			"properties": {
				"css": {
					"type": "string"
				},
				"baseColor": {
					"type": "string"
				}
			},
			"required": ["css", "baseColor"]
		},
		"aliases": {
			"type": "object",
			"properties": {
				"utils": {
					"type": "string"
				},
				"components": {
					"type": "string"
				},
				"ui": {
					"type": "string"
				},
				"hooks": {
					"type": "string"
				}
			},
			"required": ["utils", "components"]
		},
		"typescript": {
			"type": "boolean"
		},
		"registry": {
			"type": "string"
		}
	},
	"required": ["tailwind", "aliases"]
}
