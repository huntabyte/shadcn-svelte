{
	"compilerOptions": {
		"strict": true,
		"module": "Node18",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"noEmit": true,
		"verbatimModuleSyntax": true,
		"erasableSyntaxOnly": true,
		"noUncheckedIndexedAccess": true,
	},
	"include": ["src"]
}
