{
	"name": "shadcn-svelte",
	"version": "0.3.0",
	"description": "Add components to your apps.",
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"author": {
		"name": "huntabyte & shadcn",
		"url": "https://twitter.com/huntabyte"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/huntabyte/shadcn-svelte.git",
		"directory": "packages/cli"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"components",
		"ui",
		"tailwind",
		"radix-ui",
		"shadcn",
		"svelte",
		"sveltekit",
		"radix-svelte"
	],
	"type": "module",
	"exports": "./dist/index.js",
	"bin": "./dist/index.js",
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf dist && rimraf components",
		"start:dev": "cross-env COMPONENTS_REGISTRY_URL=http://localhost:5173 node dist/index.js",
		"start": "node dist/index.js",
		"format:write": "prettier --write .",
		"format:check": "prettier --check .",
		"release": "changeset version",
		"pub:beta": "pnpm build && pnpm publish --no-git-checks --access public --tag beta",
		"pub:next": "pnpm build && pnpm publish --no-git-checks --access public --tag next",
		"pub:release": "pnpm build && pnpm publish --access public",
		"temp": "pnpm build && pnpm start config"
	},
	"dependencies": {
		"chalk": "5.2.0",
		"commander": "^10.0.0",
		"execa": "^7.0.0",
		"fs-extra": "^11.1.0",
		"node-fetch": "^3.3.0",
		"ora": "^6.1.2",
		"prompts": "^2.4.2",
		"tsconfig-paths": "^4.2.0",
		"zod": "^3.20.2"
	},
	"devDependencies": {
		"@antfu/ni": "^0.21.5",
		"@ianvs/prettier-plugin-sort-imports": "^3.7.2",
		"@types/estree": "^1.0.1",
		"@types/fs-extra": "^11.0.1",
		"@types/prettier": "^2.7.2",
		"@types/prompts": "^2.4.2",
		"acorn": "^8.8.2",
		"astring": "^1.8.5",
		"cross-env": "^7.0.3",
		"estree-walker": "^3.0.3",
		"magic-string": "^0.30.2",
		"prettier": "^2.8.8",
		"rimraf": "^4.1.3",
		"tsup": "^6.6.3",
		"type-fest": "^3.8.0",
		"typescript": "^4.9.3"
	}
}
