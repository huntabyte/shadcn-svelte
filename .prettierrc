{
	"useTabs": true,
	"tabWidth": 4,
	"singleQuote": false,
	"trailingComma": "es5",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": "*.md",
			"options": {
				"tabWidth": 2,
				"useTabs": false,
				"printWidth": 79
			}
		},
		{
			"files": ".github/**/*",
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	],
	"tailwindFunctions": ["clsx", "cn", "tv"]
}
